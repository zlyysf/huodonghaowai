<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@drawable/alert_dialog_bg">

    <TextView
        android:layout_width="210dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:textColor="@color/black"
        android:lineSpacingExtra="5dip"
        android:id="@+id/tvNotifyText"/>
    <LinearLayout android:layout_width="210dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button android:layout_height="wrap_content"
            android:layout_width="80dip"
            android:layout_marginRight="5dip"
            android:text="@string/Cancel"
            android:id="@id/btnCancel"
            android:background="@drawable/following_button"/>
        <Button android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/OK"
            android:id="@+id/btnOk"
            android:background="@drawable/btn_3state_bg"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>